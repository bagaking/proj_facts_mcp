{
  "name": "@bagaking/proj_facts_mcp",
  "version": "0.1.2",
  "description": "MCP server for project knowledge management and fact-based insights",
  "type": "module",
  "main": "dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "echo \"Tests will be added in future iterations\" && exit 0",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "prepack": "pnpm run build",
    "prepublishOnly": "pnpm run validate-release",
    "publish:current": "pnpm run build && pnpm publish",
    "validate-release": "node scripts/validate-release.js",
    "version:patch": "pnpm version patch --no-git-tag-version",
    "version:minor": "pnpm version minor --no-git-tag-version",
    "version:major": "pnpm version major --no-git-tag-version",
    "release:patch": "pnpm run version:patch && pnpm run build && pnpm publish",
    "release:minor": "pnpm run version:minor && pnpm run build && pnpm publish",
    "release:major": "pnpm run version:major && pnpm run build && pnpm publish",
    "release:dry-run": "pnpm run validate-release && pnpm publish --dry-run"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "knowledge-management",
    "facts",
    "insights",
    "ai-agent",
    "typescript"
  ],
  "author": "bagaking",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bagaking/proj_facts_mcp.git"
  },
  "bugs": {
    "url": "https://github.com/bagaking/proj_facts_mcp/issues"
  },
  "homepage": "https://github.com/bagaking/proj_facts_mcp#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "agents/**/*"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
